<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.hj.nf.myapplication.MainActivity"


    >


    <LinearLayout
        android:id="@+id/titles"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:orientation="vertical"

        >


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent_white_55"
            android:minHeight="?attr/actionBarSize"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/title_icon"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="@drawable/set_48"


                />

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp"
                android:layout_weight="20"
                android:text="환경설정"
                android:textColor="@color/black"

                android:textSize="23dp" />

            <ImageView
                android:id="@+id/title_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/help_24" />

        </LinearLayout>


        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="@color/blue_200" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/direct"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titles"

        >

        <LinearLayout
            android:id="@+id/direct_ll111"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="기기에서 프라이버시 보호를 위하여 숨길 기능을 알려드립니다."
                android:textSize="15dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/direct_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/direct_ll111"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">


            <Button
                android:id="@+id/btn_call"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:background="@color/transparent_white_85"
                android:drawableEnd="@drawable/next_24"
                android:drawableStart="@drawable/contact_32"
                android:text="  연락처"
                android:textAlignment="textStart"
                android:textSize="25dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:text="숨기고 싶은 연락처를 선택하세요 \n관련된 모든 내역을 숨겨서 당신의 프라이버시를 보호하세요 "
                android:textSize="15dp" />

            <RelativeLayout
                android:id="@+id/calltitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:src="@drawable/call_1"
                    android:layout_centerVertical="true"
                    android:id="@+id/calltitle_iv"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="5dp"
                    android:gravity="left"
                    android:text="연락한 통화 기록을 숨겨드립니다."
                    android:textSize="15dp"
                    android:layout_toRightOf="@id/calltitle_iv"
                    android:layout_centerVertical="true" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/calltitle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/sms_1"
                    android:id="@+id/calltitle2_iv"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="5dp"
                    android:gravity="left"
                    android:text="연락한 문자 내용을 숨겨드립니다."
                    android:textSize="15dp"
                    android:layout_toEndOf="@+id/calltitle2_iv"
                    android:layout_centerVertical="true"
                    />


            </RelativeLayout>

            <Button
                android:id="@+id/btn_file"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:background="@color/transparent_white_85"
                android:drawableEnd="@drawable/next_24"
                android:drawableStart="@drawable/file_32"
                android:text="  파일"
                android:textAlignment="textStart"
                android:textSize="25dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:text="기기에 저장되어 있는 파일들을 선택하세요\n사진, 동영상, 녹음 등을 선택할 수 있습니다"
                android:textSize="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:gravity="left"
                android:text="숨기고 싶은 파일이 있지 않으신지요?"
                android:textColor="@color/grey_300"
                android:textSize="15dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:background="@color/transparent_white_85"
                android:drawableStart="@drawable/icon_32"
                android:text="  아이콘"
                android:textAlignment="textStart"
                android:textSize="25dp"

                />


            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="기기에 표시되어 있는 이 앱을 숨길 수 있습니다. \n아이콘 활성화 스위치를 꺼보세요"
                android:textColor="@color/grey_600"
                android:textOff="숨기기"
                android:textOn="표시"
                android:textSize="15dp" />


            <Button
                android:id="@+id/btn_recover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:background="@color/transparent_white_85"
                android:drawableEnd="@drawable/next_24"
                android:drawableStart="@drawable/recover_32"
                android:text="  복구"
                android:textAlignment="textStart"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/txt_recover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:text="숨겼던 모든 내용을 복구합니다"
                android:textSize="15dp" />


        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>

